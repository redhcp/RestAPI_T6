<% include ../partials/_header %>

<div class="container">
  <h6>edicion revistas</h5>
  <div class="row">
    <!--FORM-->
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <form action="/revista_edit/<%= revista._id %>" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="name" placeholder="Title" value="<%= revista.name %>">
            </div>
            <div class="form-group">
              <textarea class="form-control" name="description" cols="80"
                placeholder="Add a Description"
                ><%= revista.description %></textarea>
            </div>
            <button class="btn btn-primary" type="submit">
              Add
            </button>
          </form>
        </div>
      </div>
    </div>


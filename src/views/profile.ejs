<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Suscripciones</title>

    <style>
        @import url(//fonts.googleapis.com/css?family=Montserrat:300,400,500,600,700,800);

        .header2 {
            font-family: "Montserrat", sans-serif;
            color: #8d97ad;
            font-weight: 300;
        }

        .header2 h1,
        .header2 h2,
        .header2 h3,
        .header2 h4,
        .header2 h5,
        .header2 h6 {
            color: #3e4555;
        }

        .header2.bg-success-gradiant {
            background: #1D7AAB;
            background: -webkit-linear-gradient(legacy-direction(to right), #1dc8cc 0%, #1dc8cc 100%);
            background: -webkit-gradient(linear, left top, right top, from(#2cdd9b), to(#1dc8cc));
            background: -webkit-linear-gradient(left, #2cdd9b 0%, #1dc8cc 100%);
            background: -o-linear-gradient(left, #1dc8cc 0%, #1dc8cc 100%);
            background: linear-gradient(to right, #1e2942 0%, #126290 100%);
        }

        .header2 .font-12 {
            font-size: 12px;
        }

        .header2 .dropdown-item {
            padding: 8px 1rem;
            color: #8d97ad;
        }

        .header2 .h2-nav .navbar-nav .nav-item .nav-link {
            padding: 12px 0px;
            color: #ffffff;
            font-weight: 400;
        }

        .header2 .h2-nav .navbar-nav .nav-item .nav-link:hover {
            color: #263238;
        }

        .header2 .h2-nav .navbar-nav .nav-item {
            margin: 0 10px;
        }

        @media (min-width: 1024px) {
            .header2 .navbar-nav>.dropdown .dropdown-menu {
                min-width: 210px;
                margin-top: 0px;
            }

            .header2 .dropdown-submenu:hover>.dropdown-menu {
                display: block;
            }
        }

        .header2 .dropdown-toggle::after {
            display: none;
        }

        .header2 .dropdown-submenu>.dropdown-menu.menu-right {
            left: auto;
            right: 100%;
            top: 0;
        }
 
        .header2 .btn-dark {
            color: #fff;
            background-color: #343a40;
            border-color: #343a40;
        }

        .header2 .btn-dark:hover {
            color: #fff;
            background-color: #23272b;
            border-color: #1d2124;
        }

        .header2 .h2-nav .navbar-nav .nav-item .btn {
            opacity: 0.5;
        }

        .header2 .h2-nav .navbar-nav .nav-item .btn:hover {
            opacity: 1;
        }

      
    </style>
</head>

<body>
    <div class="header2 bg-success-gradiant">
        <div class="">
            <!-- Header 1 code -->
            <nav class="navbar navbar-expand-lg h2-nav">
                <a class="navbar-brand" href=""><img src="" alt="" /></a>

                <div class="collapse navbar-collapse hover-dropdown" id="header2">
                 
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active"><a class="nav-link" href=""><%= user.email %></a></li>
                        <li class="nav-item active"><a class="nav-link" href="/logout">Logout</a></li>
                </div>
            </nav>
          
        </div>
    </div>

    <div class="container"  style="text-align:center;">
        <!-- LIST -->
        <div class="col-md-9">
            <h3>Suscripciones Activas</h3>
            <div class="table-responsive">
                <table class="table table-bordered table-hover table table-sm text-center">
                    <thead class="thead-dark">
                        <tr>
                            <th>NÂ°</th>
                            <th>Name Revista</th>
                            <th>Name Edicion</th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0; i < revistas.length; i++) { %>
                        <tr>
                            <td><%= i + 1%></td>
                            <td><strong><%= revistas[i].name %></strong></td>
                            <td><%= ediciones[i].name %></td>
                            <td>
                             
                                <% if(suscripciones[i].descargas > 2 ){ %>
                                <a href="/download/<%= ediciones[i].id %>" class="btn btn-primary btn-sm disabled" role="button"
                                    aria-disabled="true">
                                    Limite de descargas
                                </a>
                                <% } %>
                                <% if(suscripciones[i].descargas <= 2){ %>
                                <a href="/download/<%= ediciones[i].id %>&<%= suscripciones[i].id %> " class="btn btn-primary btn-sm" onclick=" return confirmar()">
                                    Descargar
                                </a>
                                <% } %> 
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
</body>


<script>
    function confirmar()
    {
        if(confirm("Estas seguro que quieres descargar la  edicion ?"))
        {
            
            return true;
        }
        return false;
    }
</script>



</html>


